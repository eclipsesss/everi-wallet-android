<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5">

    <FrameLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:background="@drawable/shadow_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10">

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="172dp"
            android:background="@null"
            android:lineSpacingExtra="4dp"
            android:hint="@string/please_input_private_key_content"
            android:gravity="clip_vertical"
            android:padding="14dp"
            android:textColorHint="@color/color_bb"
            android:textColor="@color/color_68"
            android:textSize="14sp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_key"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="vertical"
        android:layout_margin="7dp"
        android:background="@drawable/shadow_circle"
        app:layout_constraintTop_toBottomOf="@+id/layout">
        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:lineSpacingExtra="4dp"
            android:hint="@string/keystore_pwd"
            android:singleLine="true"
            android:gravity="clip_vertical"
            android:padding="14dp"
            android:textColorHint="@color/color_bb"
            android:textColor="@color/color_68"
            android:textSize="14sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/shape_3137_4"
        android:gravity="center"
        android:text="@string/Immediate_import"
        android:textColor="@color/color_e4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fl_key" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_33"
        android:layout_marginStart="14dp"
        android:layout_marginTop="24dp"
        android:text="@string/Copy_and_paste_the_contents_of_the_wallet_Keystore_file_directly_into_the_input_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>