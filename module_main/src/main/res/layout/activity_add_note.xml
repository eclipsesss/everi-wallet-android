<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/normal_toolbar"/>

    <LinearLayout
        android:id="@+id/ll_name"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@drawable/shadow_line_e6_7"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_marginStart="@dimen/dp_7"
        android:layout_marginEnd="@dimen/dp_7"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_marginStart="20dp"
            android:text="@string/name"
            android:gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:textColor="@color/color_33"
            android:textSize="15sp" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           tools:text="叶节点"
           android:textColor="@color/color_68"
           android:layout_marginEnd="20dp"
           android:drawableEnd="@drawable/ic_my_more"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_7"
        android:layout_marginEnd="@dimen/dp_7"
        android:background="@drawable/shadow_line_e6_7"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_address"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="48dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginStart="20dp"
                android:text="@string/key"
                android:gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:textColor="@color/color_33"
                android:textSize="15sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_type"
                android:layout_weight="1"
                android:singleLine="true"
                android:gravity="end"
                android:background="@null"
                android:textSize="@dimen/sp_14"
                android:textColorHint="@color/color_bb"
                android:hint="@string/please_input"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="24dp"
                android:id="@+id/iv_scan"
                android:src="@drawable/ic_pay_scan"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_half"
            android:layout_marginStart="19dp"
            android:background="@color/color_cc"/>

        <LinearLayout
            android:id="@+id/ll_phone"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/weight"
                android:layout_weight="1"
                android:textColor="@color/color_33"
                android:textSize="15sp"
                android:layout_marginStart="24dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_reduce"
                android:src="@drawable/ic_reduce"/>

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                tools:text="1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="18dp"
                android:id="@+id/iv_add"
                android:src="@drawable/ic_add"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_save"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:gravity="center"
        android:background="@drawable/shape_3137_4"
        android:text="@string/submit"
        android:textColor="@color/color_e4"
        android:layout_marginTop="24dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"/>
</LinearLayout>